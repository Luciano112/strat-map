<div class= "formContainer">
  <%= form_for @collection do |f| %>
    <div class="generalInfoForm">
      <h3>Stratigraphic Column Information</h3>
      <div class="infoFormFields">

        <div class = "form-group">
          <%= f.label :name %>
          <%= f.text_field :name, required: :true, class: "form-control" %>
        </div>
        
        <div class = "form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        
        <div class = "form-group">
          <%= f.label :strat_column_ids %>
          <!--%= f.collection_select(:strat_column_ids, @user_columns, :id, :name, {:prompt => "Please Select a Columns"}, {:multiple => true, class: "form-control"} ) %>-->
          <%= f.collection_select(:strat_column_ids, @user_columns, :id, :name, {:prompt => "Please Select a Columns"}, {:multiple => true, class: "form-control"} ) %>
        </div>
        
      </div>  
    </div>
    
    <div class = "form-group footer">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <span class = "btn btn-default add_btn"><i class='glyphicon glyphicon-plus'></i> Add a new Stratum </span>
    </div>
    
  <% end %>
</div>