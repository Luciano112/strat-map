            <%= image_tag "stratcolPreviewCrop.png", class: "img-responsive"%>
          </div>
        </div>
        <div class="item slides">
          <div class="slide-2">
            <%= image_tag "mapViewPreviewCrop.png", class: "img-responsive"%>            
          </div>
