<h3> Show Page</h3>

<%= link_to edit_strat_column_path(id: @strat_column.id), class: "btn btn-default" do %>
  Edit Column Details
<% end%>

<%= link_to strat_column_path(@strat_column.id), method: :delete, confirm: "Delete this Stratigraphic Column?", class: 'btn btn-default' do %>
  <i>Delete Column</i>
<% end %>

<h3>Strata info </h3>
<p><%= @strat_column.name %> </p>
<p><%= @strat_column.lat %> </p>
<p><%= @strat_column.lng %> </p>
<p><%= @strat_column.description %> </p>




<h3> Strat.layers info</h3>
<% @layers.each_with_index do |layer, i| %>
  <h3>Layer <%= i+=1 %></h3>
  <p><%= layer.name %> </p>
  <p><%= layer.formation %> </p>
  <p><%= layer.thickness %> </p>
  <p><%= layer.description %> </p>
  
  <h3>Lithology</h3>
  <p><%= layer.lithology.name %> </p>
  <p><%= layer.lithology.rock_type %> </p>
  <p><%= layer.lithology.url %> </p>
  
<% end %>
