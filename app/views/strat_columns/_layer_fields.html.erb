<div class="panel panel-default layer">

  <div class= "header panel-heading">
    <h3 class="section-label"> 
       <% if @strat_column.new_record? %>
        <a data-toggle="collapse" href="#<%=f.index %>"> <b>New Stratum </b></a> 
      <% else %>
        <a data-toggle="collapse" href="#<%= f.index %>"> <b>Edit Stratum</b></a> 
      <% end %>
    </h3> 
  </div>


  <div id="<%=f.index %>" class="infoFormFields layerFields panel-collapse collapse in">

    <%= f.input :name, error: 'Layer name is required' %>

    <%= f.input :lithology_name, label: 'Select Lithology Pattern', input_html: {class: 'lithology_name', data: {autocomplete_source: lithologies_path}} %>

    <%= f.input :formation %>

    <%= f.input :timescale_name, label: 'Select Geologic Age', input_html: {class: 'timescale_name', data: {autocomplete_source: timescales_path}} %>

    <%= f.input :contact_id, collection: Contact.order(:name), label_method: :name, value_method: :id, label: "Select Contact Type (Upper Boundary)", prompt: "Select Contact", error: "Can't be blank" %>

    <%= f.input :thickness, placeholder: 'Must be in meters', error: "Can't be blank"%>

    <%= f.input :description %>
    <%= link_to_remove_association('remove this', f, {wrapper_class: 'layer'})%>
  </div>
</div>
